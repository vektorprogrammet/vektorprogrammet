{% extends "adminBase.html.twig" %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('survey_notifiers') }}">Varselutsendelser</a>
    </li>
    <li class="breadcrumb-item active">{{ isCreate ? 'Lag varselutsendelse' : surveyNotifier.name }}</li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 col-xl-10 col-xxl-9 col-xxxl-7">
            {{ form_start(form) }}
            <div class="card">
                <div class="card-header"><i class="fa fa-align-justify"></i> {{ isCreate ? 'Lag påminnelse til undersøkelse' : surveyNotifier.name }}</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(form.name) }}
                            {{ form_row(form.survey) }}
                            {{ form_row(form.notificationType) }}
                            {{ form_row(form.timeOfNotification) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header"><i class="fas fa-info-circle"></i></div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <p>MERK: Undersøkelser blir ikke sendt til personer som allerede har svart på undersøkelsen. Men om det ikke er tilfellet kan samme undersøkelse sendes som varsel i andre undersøkelsevarsler</p>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header"><i class="fas fa-users"></i> Brukergrupper</div>
                        <div class="card-body">
                            {{ form_row(form.usergroup) }}

                        </div>
                    </div>

                </div>
            </div>


            <div class="card">
                <div class="card-body">
                    <button class="btn btn-primary">Lagre</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
