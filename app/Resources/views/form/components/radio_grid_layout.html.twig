{%- block choice_widget_expanded -%}
    <ul {{ block('widget_container_attributes') }} class="no-bullet alternatives">
        {%- for child in form %}
            <li>
                {{- form_widget(child) -}}
                {{- form_label(child) -}}
            </li>
        {% endfor -%}
    </ul>
{%- endblock choice_widget_expanded -%}

{%- block form_row -%}
    <li>
        {% if not valid %}
        <div class="error">{% endif %}
            {{- form_label(form) -}}
            {% if not valid %}</div>{% endif %}
        {{- form_errors(form) -}}
        {{- form_widget(form) -}}
    </li>
{%- endblock form_row -%}
