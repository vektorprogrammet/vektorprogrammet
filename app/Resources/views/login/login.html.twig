{% extends 'base.html.twig' %}

{% block title %}
    Logg inn
{% endblock %}

{% block body %}
    <div class="container">
<div class="page-header mb-5">
    <h1>Innlogging</h1>
</div>
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData) }}</div>
            {% endif %}

            {% if message is defined %}
                <p>{{ message|safe_html }}</p>
            {% endif %}

            <form action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                    <label for="form-username">Brukernavn / e-post</label>
                    <input
                            class="form-control"
                            type="text"
                            id="form-username"
                            name="_username"
                            value="{{ last_username }}"
                            required
                    />
                </div>
                <div class="form-group">
                    <label for="form-password">Passord</label>
                    <input
                            class="form-control"
                            type="password"
                            id="form-password"
                            name="_password"
                            required
                    />
                </div>
                <input type="hidden" value="true" name="_remember_me" />

                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                #}
                {% if redirect_path is defined %}
                    <input type="hidden" name="_target_path" value="{{ redirect_path }}"/>
                {% endif %}

                <p class="mt-4 d-flex">
                    <button class="btn btn-primary" type="submit">Logg inn</button>
                    <a class="ml-auto" href="{{ path('reset_password') }}">Glemt passord?</a>
                </p>
            </form>

        </div>
    </div>
    </div>
{% endblock %}


