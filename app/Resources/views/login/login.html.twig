{% extends 'base.html.twig' %}

{% block title %}
    Logg inn
{% endblock %}

{% block body %}

    <div class="row">
        <div class="small-12   medium-6 medium-offset-3  large-6 large-offset-3 columns">
            <p></p>

                
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData) }}</div>
                {% endif %}

                {% if message is defined %}
                    <p>{{ message|raw }}</p>
                {% endif %}

                <form action="{{ path('login_check') }}" method="post">
                    <label for="username">Brukernavn:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />

                    <label for="password">Passord:</label>
                    <input type="password" id="password" name="_password" />

                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                    #}
                    {% if redirect_path is defined %}
                        <input type="hidden" name="_target_path" value="{{ redirect_path }}" />
                    {% endif %}

                    <button type="submit">login</button>

                    <p></p><a href="{{ path('reset_password')}}">Glemt passord?</a></p>
                </form>

        </div>
    </div>

{% endblock %}


