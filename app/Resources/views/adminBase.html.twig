        <div class="small-12 medium-6 large-3 columns">
            <h6><b>Sponsorer:</b></h6>
            <ul style="display:inline-block">
                {% for sponsor in get_sponsors() %}
                    <li><a href="{{ sponsor.url }}" target="_blank"> {{ sponsor.name  }} </a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
</footer>
{% endblock %}

