{% extends 'adminBase.html.twig' %}
{% block body %}
    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <h1>Last ned attest</h1>

            <hr>

            <table width="100%" id="substitute-table">
                <thead>
                <tr>
                    <!--Navn	e-post	Skole	Semester	Avdeling-->
                    <th>Navn</th>
                    <th>E-post</th>
                    <th>Skole</th>
                    <th>Linje</th>
                </tr>
                </thead>
                <tbody>
                {% for a in assistants %}
                <tr id="{{ a.id }}">
                    <td>{{ a.user }}</td>
                    <td>{{ a.user.email }}</td>
                    <td>{{ a.school }}</td>
                    <td>{{ a.user.fieldOfStudy }}</td>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <td>
                            <a href="{{ path('profile_certificate', { 'id': a.user.id }) }}" class="button tiny">
                                <i class="fa fa-pencil-square-o"></i> Last ned
                            </a>
                        </td>
                    {% endif %}
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

