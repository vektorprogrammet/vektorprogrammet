{% extends 'adminBase.html.twig' %}

{% block title %}
    Sett opp intervju
{% endblock %}

{% block body %}
    <p></p>

    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <div class="panel">
                <div class="row">
                    <div class="small-12 medium-12 large-12 columns">
                        <h3>Sett opp intervju</h3>
                        <h5>Intervjuer</h5>
                        <p>{{ interview.interviewer.firstName }} {{ interview.interviewer.lastName }}</p>
                        <h5>Kandidat</h5>
                        <table>
                            <thead>
                            <tr>
                                <th> Fornavn</th>
                                <th> Etternavn</th>
                                <th> Tlf</th>
                                <th> E-post</th>
                                <th> Linje</th>
                                <th> År</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                {% set u = interview.user %}
                                <td> {{ u.firstName }} </td>
                                <td> {{ u.lastName }} </td>
                                <td> {{ u.phone }} </td>
                                <td> {{ u.email }} </td>
                                <td> {{ u.fieldOfStudy }} </td>
                                <td> {{ application.yearOfStudy }} </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <h5>Tid og sted</h5>

                {{ form_start(form) }}
                <div class="row">
                    <div class="small-12 medium-4 columns">
                        {{ form_row(form.datetime) }}
                    </div>
                    <div class="small-12 medium-4 columns">
                        {{ form_row(form.room) }}
                    </div>

                </div>
                <div class="row">
                    <div class="small-12 medium-4 columns end">
                        <div class="panel callout radius">
                            <p>Format yyyy-MM-dd HH:mm:ss<br>Tidspunktet blir automatisk lagt til på slutten av
                                e-posten.</p>
                        </div>
                    </div>
                </div>

                <h5>Melding</h5>
                <div class="row">
                    {{ form_errors(form) }}
                    <div class="small-12 medium-4 columns">
                        {{ form_row(form.from) }}
                    </div>
                    <div class="small-12 medium-4 columns end">
                        {{ form_row(form.to) }}
                    </div>
                </div>
                <div class="row">
                    <div class="small-12 columns">
                        {{ form_row(form.message) }}
                    </div>
                </div>
                <div class="row">
                    <div class="small-12 columns">

                        {{ form_widget(form.save, {'attr': {'class': 'button tiny'}}) }}
                        {{ form_widget(form.preview, {'attr': {'class': 'button tiny', 'formtarget': '_blank'}}) }}
                        {{ form_widget(form.changeStatus, {'attr': {'class': 'button tiny', 'data-reveal-id': 'abcd'}}) }}
                        <div class="float-right">
                            {{ form_widget(form.saveAndSend, {'attr': {'class': 'button tiny'}}) }}
                        </div>

                    </div>
                </div>
                <div id="abcd" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
                    <h3 id="modalTitle">Endre status</h3>
                    <select name="status" id="status">
                        <option value=0>Ingen svar</option>
                        <option value=1>Akseptert</option>
                        <option value=2>Ny tid ønskes</option>
                        <option value=3>Kansellert</option>
                    </select>
                    <button type="submit" class="tiny success">Lagre</button>
                    <a class="close-reveal-modal" aria-label="Close">&#215;</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
