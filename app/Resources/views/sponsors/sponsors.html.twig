{% set large_sponsors = get_sponsors_by_size('large') %}
{% set medium_sponsors = get_sponsors_by_size('medium') %}
{% set small_sponsors = get_sponsors_by_size('small') %}

<div class="row text-center">
    {% if large_sponsors is not empty %}
        <h2>Hovedsponsorer</h2>
        {% for sponsor in large_sponsors %}
            <div class="small-6 medium-6 large-6 sponsor-column {{ loop.last? 'end':'' }} {% if (((large_sponsors|length) % 2) == 1) and loop.last %}small-offset-3{% endif %} columns">
                <a href="{{ sponsor.url }}">
                    <span class="vertical-align-image-helper"></span><img class="sponsor-img-large"
                                                                          src="{{ asset(sponsor.logoImagePath) }}">
                </a>
            </div>
        {% endfor %}
        <hr>
    {% endif %}
</div>

<div class="row text-center">
    {% if medium_sponsors is not empty or small_sponsors is not empty %}
        <h3>Sponsorer og partnere</h3>
    {% endif %}
    {% for sponsor in medium_sponsors %}
        <div class="small-4 medium-4 large-4 sponsor-column {{ loop.last? 'end':'' }}
        {% if (((medium_sponsors|length) % 3) == 1) and loop.last %}small-offset-4
        {% elseif (((medium_sponsors|length) % 3) == 2) and loop.index == (medium_sponsors|length - 1) %}small-offset-2
        {% endif %} columns">
            <a href="{{ sponsor.url }}">
                <span class="vertical-align-image-helper"></span><img class="sponsor-img-{{ sponsor.size }}"
                                                                      src="{{ asset(sponsor.logoImagePath) }}">
            </a>
        </div>
    {% endfor %}
</div>

<div class="row text-center">
    {% for sponsor in small_sponsors %}
        <div class="small-3 sponsor-column {{ loop.last? 'end':'' }}
        {% if (((small_sponsors|length) % 4) == 1) and loop.last %}small-12
        {% elseif (((small_sponsors|length) % 4) == 2) and loop.index == (small_sponsors|length - 1) %}small-offset-3
        {% elseif (((small_sponsors|length) % 4) == 3) and loop.index == (small_sponsors|length - 2) %}small-offset-1
        {% endif %} columns">
            <a href="{{ sponsor.url }}">
                <span class="vertical-align-image-helper"></span><img class="sponsor-img-{{ sponsor.size }}"
                                                                      src="{{ asset(sponsor.logoImagePath) }}">
            </a>
        </div>
    {% endfor %}
</div>

