{% extends 'adminBase.html.twig' %}


{% block javascripts %}

    {# Easy routing with FOSJsRouting bundle #}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    {# We need the deletetablerow.js file #}
    <script src="{{ asset('js/deleteablerow.js') }}"></script>

    <script>

        $(document).ready(function () {
            $('.delete').deleteablerow('useradmin_delete_user_by_id', {
                confirmation: {
                    modal: $('#confirmModal'),
                    acceptButton: $('#modalAccept'),
                    cancelButton: $('#modalCancel')
                }
            });
        });

        $("#search").keyup(function () {

            _this = this;

            $.each($("#table tbody").find("tr"), function () {

                if ($(this).text().toLowerCase().indexOf($(_this).val().toLowerCase()) == -1) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });

        });

    </script>


{% endblock %}

{% block title %}
    Brukere
{% endblock %}


{% block body %}
    <p></p>

    <div class="row">
        <div class="small-12 medium-12 large-12 columns">

            <h1> Brukere </h1>

            <hr>

            <div class="row">

                <div class="small-12 medium-12 large-6 columns">

                    <ul class="inline-list">

                        {# Dropdown to choose department, only for superadmins #}
                        {% if is_granted('ROLE_SUPER_ADMIN') %}

                            {% include "common/department_dropdown.html.twig" with {'pathForDepartment': 'useradmin_filter_users_by_department', 'departmentParameterName': 'id', 'currentDepartment': department} %}

                            {# Button to create a user, dropdown for superadmin and regular button for admin #}
                            <li>
                                <a class="button tiny" data-dropdown="superadminCreateUser"
                                   aria-controls="superadminCreateUser" aria-expanded="false">Opprett bruker &raquo;</a>
                                <ul id="superadminCreateUser" class="f-dropdown" data-dropdown-content tabindex="-1"
                                    aria-hidden="true" aria-autoclose="false" tabindex="-1">

                                    {% for d in departments %}

                                        <li>
                                            <a href="{{ path('useradmin_create_user', { 'id': d.id }) }}">{{ d.shortName }}</a>
                                        </li>

                                    {% endfor %}

                                </ul>
                            </li>
                        {% else %}
                            <li><a href="{{ path('useradmin_create_user') }}"" class="button tiny">Opprett bruker</a>
                            </li>
                        {% endif %}

                    </ul>

                </div>

                <div class="small-12 medium-12 large-6 columns">

                    <input type="text" id="search" placeholder="SÃ¸k..."/>

                </div>


            </div>
        </div>
    </div>

    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <hr>
            {% include 'user_admin/user.table.html.twig' with {users: activeUsers} %}
        </div>
    </div>

    <div id="confirmModal" class="reveal-modal small" data-reveal aria-labelledby="confirmModalDelete"
         aria-hidden="true" role="dialog">
        <h2 id="modalMessage">Vil du virkelig slette elementet?</h2>
        <ul class="inline-list">
            <a id="modalAccept" href="#" class="button tiny">Slett</a>
            <a id="modalCancel" href="#" class="button tiny">Avbryt</a>
        </ul>
    </div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}

        <p></p>

        <div class="row">
            <div class="small-12 medium-12 large-12 columns">

                <h1> Inaktive Brukere </h1>

            </div>
        </div>

        <div class="row">
            <div class="small-12 medium-12 large-12 columns">
                <hr>
                {% include 'user_admin/user.table.html.twig' with {users: inActiveUsers} %}
            </div>
        </div>

        <div id="confirmModal" class="reveal-modal small" data-reveal aria-labelledby="confirmModalDelete"
             aria-hidden="true" role="dialog">
            <h2 id="modalMessage">Vil du virkelig slette elementet?</h2>
            <ul class="inline-list">
                <a id="modalAccept" href="#" class="button tiny">Slett</a>
                <a id="modalCancel" href="#" class="button tiny">Avbryt</a>
            </ul>
        </div>
    {% endif %}
{% endblock %}



