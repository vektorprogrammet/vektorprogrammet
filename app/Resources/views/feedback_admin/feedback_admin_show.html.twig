{% extends 'adminBase.html.twig' %}
{% block title %}
{{ title }}
{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('feedback_admin_index')}}">Feedback</a>
    </li>
    <li class="breadcrumb-item active">{{ title }}</li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="card">
                <div class="card-header">
                    {% if feedback.type == 'question' %}
                    <span class="badge badge-primary">Spørsmål</span>
                    {% elseif feedback.type == 'error' %}
                    <span class="badge badge-danger">Feilmelding</span>
                    {% elseif feedback.type == 'feature_request' %}
                    <span class="badge badge-success">Ny funksjonalitet</span>
                    {% endif %}
                    {{ feedback.title }}
                </div>
                <div class="card-body">
                    <div id="description">
                        {{feedback.description}}
                    </div>
                    <br></br>
                    Sendt inn av: 
                    {% if feedback.user %}
                    <a href="{{ path('specific_profile', {id: feedback.user.id})}}">{{ feedback.user.getFullName() }}</a>
                    {% else %}
                    Anonym
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
