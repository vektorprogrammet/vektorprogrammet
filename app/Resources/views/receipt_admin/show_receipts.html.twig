{% extends 'adminBase.html.twig' %}

{% block title %}Utlegg{% endblock %}

{% block body %}
<div class="row">
    <div class="small-12 medium-12 large-12 columns">
        <h1>Utlegg</h1>
    </div>
</div>

<div class="row">

    <div class="small-12 medium-12 large-12 columns">
        <hr>
    </div>

    <div class="small-12 medium-12 large-8 columns">

        <h3> Brukere med utlegg </h3>

    </div>
</div>
<div class="row">
    <div class="small-12 medium-12 large-12 columns">

        <br>

        <table width="100%">

            <thead>

            <tr>
                <th> Navn</th>
                <th> Email</th>
                <th> Kontonummer</th>
                <th> Sum ubehandlet</th>
                <th></th>
            </tr>

            </thead>

            <tbody>
            {% for user in users_with_receipts %}
                <tr>
                    <td class="{{ user.hasPendingReceipts ? 'has-pending-receipts' : '' }}" ><a href="{{ path('receipts_show_individual', {'user': user.id}) }}"> {{ user.fullName }} </a></td>

                    <td> {{ user.email }}</td>
                    <td> {{ user.accountNumber }}</td>
                    <td> {{ user.totalPendingReceiptSum|number_format(2, ',', 'Â ') }} kr</td>
                    <td>
                        {% if user.hasPendingReceipts %}
                            <div class="number-of-pending-receipts-indicator has-tip" data-tooltip aria-haspopup="true" title="{{ user.numberOfPendingReceipts }} {{ user.numberOfPendingReceipts == 1 ? 'ubehandlet' : 'ubehandlede' }} utlegg">
                                {{ user.numberOfPendingReceipts }}</div>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>


    </div>
</div>
{% endblock %}
