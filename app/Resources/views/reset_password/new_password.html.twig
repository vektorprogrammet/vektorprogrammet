{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="page-header mb-4">
            <h1>Lag nytt passord</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
                {% for flashMessage in app.session.flashbag.get('errorMessage') %}
                    <div class="alert alert-warning">{{ flashMessage|safe_html }}</div>
                {% endfor %}

                {{ form_start(form) }}
                {{ form_row(form.password) }}
                <button class="btn btn-primary mt-4">Lagre nytt passord</button>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}
