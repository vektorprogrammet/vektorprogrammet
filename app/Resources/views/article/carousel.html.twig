{% if articles|length %}
    <div class="col-12 col-md-8 col-md-push-4 columns">
        <div class="news-carousel">
            {% for article in articles %}
                <div><img src="{{ asset(article.imageLarge | imagine_filter('article_large')) }}"/></div>
            {% else %}
                <div><h3>Ingen nyheter</h3></div>
            {% endfor %}
        </div>
    </div>
    <div class="news-carousel-text col-12 col-md-4 col-md-pull-8 columns">
        <h4 class="hide-for-col-only">Nyheter:</h4>
        {% for article in articles %}
            <div id="news-carousel-text-{{ loop.index0 }}" {% if loop.index0 != 0 %}style="display: none"{% endif %}>
                <h1 class="article-heading">{{ article.title|safe_html }}</h1>
                <a href="{{ path('article_show', { 'id': article.id }) }}" class="vektor-button tiny">Les mer</a>
            </div>
        {% else %}
            <div><h3>Ingen nyheter</h3></div>
        {% endfor %}
    </div>
{% endif %}
