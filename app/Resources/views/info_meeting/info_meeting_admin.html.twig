{% extends 'adminBase.html.twig' %}

{% block title %}Infømøter{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.16/jquery.datetimepicker.min.css">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <h1 class="text-center">Legg til eller fjern Infomøte for {{ department.shortName }}</h1>
            {{ form_start(form) }}
            <div class="row">{{ form_row(form.date) }}</div>
            <div class="row">{{ form_row(form.room) }}</div>
            <div class="row">{{ form_row(form.extra) }}</div>
            <div class="row">
                <div class="small-12 medium-12 large-12 columns">
                    <button class="button">Lagre</button>
                    {{ form_end(form) }}
                    <div class="delete_info_meeting">
                        <form method="post"
                              action="{{ path('delete_info_meeting', {id:department.id}) }}">
                            <button class="alert button">Slett</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.16/jquery.datetimepicker.full.min.js"></script>
    <script>
      jQuery('#edit_info_meeting_date').datetimepicker({
        format: 'd.m.Y H:i',
        lang: 'no',
        step: 15
      });
    </script>
{% endblock %}

