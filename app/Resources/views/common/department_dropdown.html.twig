<li>
    <a class="button tiny" data-dropdown="departmentDropdown" aria-controls="departmentDropdown"
       aria-expanded="false">{{ currentDepartment is defined ? currentDepartment : 'Avdeling' }} <i class="fa fa-caret-down"></i></a>
    <ul id="departmentDropdown" class="f-dropdown" data-dropdown-content tabindex="-1"
        aria-hidden="true" aria-autoclose="false" tabindex="-1">

        {% for department in get_departments() %}

            <li>
                <a href="{{ path(pathForDepartment, { (departmentParameterName): department.id }) }}">{{ department.shortName }}</a>
            </li>

        {% endfor %}

    </ul>
</li>
