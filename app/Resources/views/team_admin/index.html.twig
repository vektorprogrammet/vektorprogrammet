{% extends 'adminBase.html.twig' %}

{% block customScripts %}

    {# Easy routing with FOSJsRouting bundle #}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    {# We need the deletetablerow.js file #}
    <script src="{{ asset('js/deleteablerow.js') }}"></script>

    <script>

        $(document).ready(function () {
            $('.delete').deleteablerow('teamadmin_delete_team_by_id', {
                confirmation: {
                    modal: $('#confirmModal'),
                    acceptButton: $('#modalAccept'),
                    cancelButton: $('#modalCancel')
                }
            });
        });

        $("#search").keyup(function () {

            _this = this;

            $.each($("#table tbody").find("tr"), function () {

                if ($(this).text().toLowerCase().indexOf($(_this).val().toLowerCase()) == -1) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });

        });

    </script>


{% endblock %}

{% block title %}
    Team
{% endblock %}
	
{% block body %}
    <div class="row">
    <div class="small-12 medium-12 large-12 columns">

        <h1> Team {{ departmentName }}</h1>

        <hr>

        <div class="row">

            {% if is_granted('ROLE_SUPER_ADMIN') %}

                <div class="small-12 medium-12 large-6 columns">

                    <ul class="inline-list">

                        <li>
                            <a class="button tiny" data-dropdown="selectDepartment" aria-controls="selectDepartment"
                               aria-expanded="false">Avdeling &raquo;</a>
                            <ul id="selectDepartment" class="f-dropdown" data-dropdown-content tabindex="-1"
                                aria-hidden="true" aria-autoclose="false" tabindex="-1">

                                {% for d in departments %}

                                    <li>
                                        <a href="{{ path('teamadmin_filter_teams_by_department', { 'id': d.id }) }}">{{ d.shortName }}</a>
                                    </li>

                                {% endfor %}

                            </ul>
                        </li>

                        <li>
                            <a class="button tiny" data-dropdown="team" aria-controls="team" aria-expanded="false">Opprett
                                team &raquo;</a>
                            <ul id="team" class="f-dropdown" data-dropdown-content tabindex="-1" aria-hidden="true"
                                aria-autoclose="false" tabindex="-1">

                                {% for d in departments %}

                                    <li>
                                        <a href="{{ path('teamadmin_create_team_for_department', { 'id': d.id }) }}">{{ d.shortName }}</a>
                                    </li>

                                {% endfor %}

                            </ul>
                        </li>

                        <li>
                            <a href="{{ path('teamadmin_show_position') }}" class="button tiny">Stillinger</a>
                        </li>

                    </ul>

                </div>

            {% endif %}

            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <div class="small-12 medium-12 large-6 columns">
                {% else %}
                <div class="small-12 medium-12 large-12 columns">
                    {% endif %}

                    <input type="text" id="search" placeholder="SÃ¸k..."/>

                </div>

            </div>


            <hr>

            <table width="100%" id="table">

                <thead>
                <tr>
                    <th> Navn</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                {% for t in teams %}
                    <tr>
                        <td width="70%"><a
                                    href="{{ path('teamadmin_show_specific_team', { 'id': t.id }) }}"> {{ t.name }} </a>
                        </td>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <td><a href="{{ path('teamadmin_update', { 'id': t.id }) }}" class="button tiny">Rediger</a>
                            </td>
                        {% endif %}
                        {% if is_granted('ROLE_HIGHEST_ADMIN') %}
                            <td><a href="#" id="{{ t.id }}" class="button tiny alert delete"><i
                                            class="fa fa-trash-o"></i> Slett</a></td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>

            </table>

        </div>
    </div>

    <div id="confirmModal" class="reveal-modal small" data-reveal aria-labelledby="confirmModalDelete"
         aria-hidden="true" role="dialog">
        <h2 id="modalMessage">Vil du virkelig slette elementet?</h2>
        <ul class="inline-list">
            <a id="modalAccept" href="#" class="button tiny">Slett</a>
            <a id="modalCancel" href="#" class="button tiny">Avbryt</a>
        </ul>
    </div>

{% endblock %}
