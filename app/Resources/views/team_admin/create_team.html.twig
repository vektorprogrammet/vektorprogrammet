{% extends 'adminBase.html.twig' %}

{% block title %}
    Opprett team
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            {% if isUpdate is not defined %}
                {% set isUpdate = false %}
            {% endif %}
            <h1> {{ isUpdate ? 'Oppdater ' ~ team.name : 'Opprett team' }} </h1>

            <p> {{ isUpdate ? 'Oppdaterer' : 'Oppretter' }} team for avdeling {{ department }} </p>

            <hr>

            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">

                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}

                    {{ form_row(form.shortDescription) }}
                    {{ form_row(form.acceptApplication) }}
                    {{ form_row(form.active) }}
                    {{ form_row(form.description) }}
                    <br>
                    {{ form_widget(form.preview, {'attr': {'class': 'btn btn-secondary', 'formtarget': '_blank'}}) }}
                    <button class="btn btn-primary">Lagre</button>
                    <br><br>

                    {{ form_end(form) }}

                </div>
            </div>


        </div>
    </div>

{% endblock %}
