<table width="100%" id="table">

    <thead>
    <tr>
        <th> Fornavn</th>
        <th> Etternavn</th>
        <th> Stilling</th>
        <th> Start</th>

        {% if is_granted_team_leader() %}
            <th></th>
            <th></th>
        {% endif %}

    </tr>
    </thead>

    <tbody>
    {% for tm in teamMemberships %}

        <tr>
            <td><a href='{{ path('specific_profile', { 'id': tm.user.id }) }}'> {{ tm.user.firstName }} </a></td>
            <td> {{ tm.user.lastName }} </td>
            <td>

                {% if tm.position is not null %}
                    {{ tm.position.name }}
                {% else %}
                    Stilling er fjernet.
                {% endif %}

            </td>
            <td> {{ tm.startSemester.name }} </td>

            {% if is_granted_team_leader() %}
                <td><a href="{{ path('teamadmin_update_team_membership', { 'id': tm.id }) }}"
                       class="button tiny">Rediger</a></td>
            {% endif %}

            {% if is_granted_admin() %}
                <td><a href="#" id="{{ tm.id }}" class="button tiny alert delete"><i class="fa fa-trash-o"></i>
                        Slett</a></td>
            {% endif %}

        </tr>
    {% endfor %}
    </tbody>

</table>
