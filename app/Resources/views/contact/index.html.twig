{% extends "base_new.html.twig" %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="contact-success alert alert-success" role="alert">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <div class="contact-page">
        <div class="content content-large">
            <header class="page-header"><h1>Kontakt oss</h1></header>

            {% for department in get_departments() %}
                <div class="segment row department">
                    <div class="col-12 col-md-6">
                        <h2>{{ department }}</h2>
                        <p class="department-name">{{ department.name }}</p>
                        <p class="email">
                            <i class="fa fa-2x fa-envelope"></i>
                            &nbsp;
                            <a href="mailto:{{ department.email }}">{{ department.email }}</a>
                        </p>
                        <p>
                            <i class="fa fa-2x fa-map-marker"></i>
                            &nbsp;
                            {{ department.address }}
                        </p>

                        <a href="{{ path('contact_department', {id: department.id}) }}"
                                class="contact-dep-btn btn btn-primary">Kontakt oss!
                        </a>
                    </div>
                    <div class="col-12 col-md-6 d-none d-md-block">
                        <div class="department-img-wrapper">
                            <img class="img-fluid" src="http://via.placeholder.com/300x300/">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
