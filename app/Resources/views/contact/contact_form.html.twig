{{ form_start(form, {'attr': {'class': 'recaptcha-form'}}) }}
{{ form_row(form.department) }}
{{ form_errors(form) }}
<div class="row contact-form">
    <div class="col-12 col-md-6">{{ form_row(form.name) }}</div>
    <div class="col-12 col-md-6">{{ form_row(form.email) }}</div>
    <div class="col-12">{{ form_row(form.subject) }}</div>
    <div class="col-12">{{ form_row(form.body) }}</div>
    <div class="col-12">{{ form_row(form.recaptcha) }}</div>

    <div class="col-12">{{ form_row(form.submit) }}</div>
</div>
{{ form_end(form) }}
