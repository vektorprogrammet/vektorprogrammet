<h2>Søkndasskjema</h2>
<br>
<ul class="nav nav-tabs">
    {% for dep in get_departments() %}
        <li class="nav-item">
            <a class="nav-link{{ dep == department ? ' active' }}"
               href="{{ path('assistants', {'id': dep.id}) }}#application">{{ dep.city }}</a>
        </li>
    {% endfor %}
</ul>


{% if semester and date() < date(semester.admissionEndDate) %}
    <header class="application-header">
        <h4>{{ department.city }}</h4>
        <p>Søknadsfrist: <span class="deadline">
                                {{ semester.admissionEndDate|date('d.m.Y') }}
                kl. {{ semester.admissionEndDate|date('H:i') }}</span>
        </p>
    </header>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-xs-12 col-md-6 col-lg-4 offset-lg-2">
            {{ form_row(form.user.firstName, { 'attr': {'tabindex': '1'}}) }}
            {{ form_row(form.user.email, { 'attr': {'tabindex': '3'}}) }}
        </div>

        <div class="col-xs-12 col-md-6 col-lg-4">
            {{ form_row(form.user.lastName, { 'attr': {'tabindex': '2'}}) }}
            {{ form_row(form.user.phone, { 'attr': {'tabindex': '4'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6 col-md-4 col-lg-2 offset-lg-2">
            {{ form_row(form.user.fieldOfStudy, { 'attr': {'tabindex': '5'}}) }}
        </div>
        <div class="col-xs-6 col-md-4 col-lg-2">
            <div>
                {{ form_row(form.yearOfStudy, { 'attr': {'tabindex': '6'}}) }}
            </div>
        </div>
        <div class="col-xs-6 col-md-4 col-lg-2">
            <div>
                {{ form_row(form.user.gender, { 'attr': {'tabindex': '7'}}) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="text-center mx-auto">
            <br>
            <br>
            <button type="submit" tabindex="8" class="btn btn-lg btn-primary">Søk nå!</button>
            <br>
            <br><br>
            <p class="text-alert">Gamle assistenter kan søke <a
                        href="{{ path('admission_existing_user') }}">her</a></p>
        </div>
    </div>
    {{ form_end(form) }}
{% else %}
    <header class="application-header">
        <h3>{{ department.city }}</h3>
    </header>
    <p class="text-center">
        Søker ikke etter nye assistenter akkurat nå.
    </p>
{% endif %}
