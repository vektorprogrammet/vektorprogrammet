{% extends 'adminBase.html.twig' %}

{% block javascripts %}

    {# Easy routing with FOSJsRouting bundle #}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    {# We need the deletetablerow.js file #}
    <script src="{{ asset('js/deleteablerow.js') }}"></script>

    <script>

        $(document).ready(function () {
            $('.delete').deleteablerow('schooladmin_delete_school_by_id', {
                confirmation: {
                    modal: $('#confirmModal'),
                    acceptButton: $('#modalAccept'),
                    cancelButton: $('#modalCancel')
                }
            });
        });

        $("#search").keyup(function () {

            _this = this;

            $.each($("#table tbody").find("tr"), function () {

                if ($(this).text().toLowerCase().indexOf($(_this).val().toLowerCase()) == -1) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });

        });

    </script>


{% endblock %}

{% block title %}
    Skoler
{% endblock %}

{% block body %}
    <p></p>

    <div class="row">
        <div class="small-12 medium-12 large-12 columns">

            <h1> Skoler {{ department }} </h1>

            <hr>

            <div class="row">
                <div class="small-12 medium-12 large-6 columns">

                    <ul class="inline-list">

                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            {% include "common/department_dropdown.html.twig" with {
                            'pathForDepartment': 'schooladmin_filter_schools_by_department',
                            'departmentParameterName': 'id',
                            'currentDepartment': department} %}

                            {% include "common/department_dropdown.html.twig" with {
                            'pathForDepartment': 'schooladmin_create_school_by_department',
                            'departmentParameterName': 'id',
                            'currentDepartment': 'Opprett Skole',
                            'dropdownId': 'createSchoolDropdown'
                            } %}

                            {% include "common/department_dropdown.html.twig" with {
                            'pathForDepartment': 'schooladmin_show_users_of_department_superadmin',
                            'departmentParameterName': 'id',
                            'currentDepartment': 'Tildel Skole',
                            'dropdownId': 'createHistoryDropdown'
                            } %}
                        {% else %}

                            <li><a href="{{ path('schooladmin_show_users_of_department') }}" class="button tiny">Tildel
                                    skole</a></li>

                        {% endif %}

                    </ul>
                </div>

                <div class="small-12 medium-12 large-6 columns">
                    <input type="text" id="search" placeholder="Søk..."/>
                </div>

            </div>

            <hr>

            <table width="100%" id="table">
                <thead>
                <tr>
                    <th> Skole</th>
                    <th> Kontaktperson</th>
                    <th> Telefon</th>
                    <th> E-post</th>
                    <th colspan="3"> Språk</th>
                </tr>
                </thead>

                <tbody>
                {% for s in schools %}
                    <tr>
                        <td><a href="{{ path('schooladmin_show_specific_school', { 'id': s.id }) }}">{{ s.name }}</a>
                        </td>
                        <td> {{ s.contactPerson }} </td>
                        <td> {{ s.phone }} </td>
                        <td> {{ s.email }} </td>
                        <td> {{ s.international ? 'Internasjonal':'Norsk' }} </td>

                        {# Only SUPER_ADMIN can edit #}
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <td><a href="{{ path('schooladmin_update', { 'id': s.id }) }}"
                                   class="button tiny">Rediger</a></td>
                        {% endif %}

                        {# Only HIGHEST_ADMIN can delete #}
                        {% if is_granted('ROLE_HIGHEST_ADMIN') %}
                            <td><a href="#" id="{{ s.id }}" class="button tiny alert delete"><i
                                            class="fa fa-trash-o"></i> Slett</a></td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div id="confirmModal" class="reveal-modal small" data-reveal aria-labelledby="confirmModalDelete"
         aria-hidden="true" role="dialog">
        <h2 id="modalMessage">Vil du virkelig slette elementet?</h2>
        <ul class="inline-list">
            <a id="modalAccept" href="#" class="button tiny">Slett</a>
            <a id="modalCancel" href="#" class="button tiny">Avbryt</a>
        </ul>
    </div>

{% endblock %}
