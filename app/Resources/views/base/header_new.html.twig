{% set route = app.request.get('_route') %}
<header class="vektor-header mdl-layout__header">
    <div class="container">
        <!-- Top row, always visible -->
        <div class="vektor-header-row__top mdl-layout__header-row">
            <!-- Title -->
            <div class="mdl-layout-spacer"></div>
            <nav class="vetktor-navigation mdl-navigation">
                <a href="#" class="mdl-navigation__link">
                    <img class="vektor-header-icon"
                         src="{{ asset_with_version('images/flag_uk.svg') }}"
                         alt="English page">
                </a>
                <a href="#" class="mdl-navigation__link">
                    <img class="vektor-header-icon"
                         src="{{ asset_with_version('images/facebook.svg') }}"
                         alt="Facebook page">
                </a>
                <a href="#" class="mdl-navigation__link">
                    <img class="vektor-header-icon"
                         src="{{ asset_with_version('images/instagram.svg') }}"
                         alt="Instagram page">
                </a>
                <a href="#" class="mdl-navigation__link">Logg inn</a>
            </nav>
        </div>
        <!-- Bottom row, not visible on scroll -->
        <div class="vektor-header-row__bottom mdl-layout__header-row">
            <a href="{{ path('home') }}"><img class="logo"
                                              src="{{ asset_with_version('images/logo_inverted.png') }}"></a>

            <div class="mdl-layout-spacer"></div>
            <!-- Navigation -->
            <nav class="vetktor-navigation mdl-navigation">
                <a class="mdl-navigation__link {{ route == 'assistants' ? 'active' : '' }}"
                   href="{{ path('assistants') }}">Assistenter</a>
                <a class="mdl-navigation__link {{ route == 'team' ? 'active' : '' }}"
                   href="{{ path('team') }}">Team</a>
                {#<a class="mdl-navigation__link {{ route == 'teachers' ? 'active' : '' }}"
                   href="{{ path('teachers') }}">LÃ¦rere</a>
                <a class="mdl-navigation__link {{ route == 'parents' ? 'active' : '' }}"
                   href="{{ path('parents') }}">Foreldre</a>#}
                <a class="mdl-navigation__link {{ route == 'about_new' ? 'active' : '' }}"
                   href="{{ path('about_new') }}">Om oss</a>
            </nav>
        </div>
    </div>
</header>
