{% extends 'adminBase.html.twig' %}

{% block customScripts %}

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <script src="{{ asset('js/stupidtable.js') }}"></script>
    <script src="{{ asset('js/deleteablerow.js') }}"></script>

    <script>

        /**
         * This object organizes the javascript used by this twig.
         *
         * The onReady function is called when the document is ready.
         */
        var Substitute = {

            // The html table containing the substitute assistants
            subTable: $("#substitute-table"),

            onReady: function () {
                // Add sort functionality to the table containing the substitute assistants
                Substitute.subTable.stupidtable();

                // Add arrows after sorting the table
                Substitute.subTable.on("aftertablesort", Substitute.addSortArrows);

                // Bind delete application functionality to each substitute delete button
                Substitute.subTable.find('.delete').deleteablerow('substitute_delete_substitute_by_id', {
                    confirmation: {
                        modal: $('#confirmModal'),
                        acceptButton: $('#modalAccept'),
                        cancelButton: $('#modalCancel')
                    }
                });

                // Emphasise a row in the table if it belongs to a newly added sub
                $("#row" + Substitute.getURLParameter("newsub")).addClass("emphasized-row");
            },

            addSortArrows: function (event, data) {
                var th = $(this).find("th");
                th.find(".arrow").remove();
                var dir = $.fn.stupidtable.dir;

                var arrow = data.direction === dir.ASC ? "asc" : "desc";
                th.eq(data.column).append('<span class="arrow"> <i class="fa fa-sort-' + arrow + '"></i></span>');
            },

            getURLParameter: function (name) {
                return decodeURIComponent((new RegExp('[?|&]' + name + '=' + '([^&;]+?)(&|#|;|$)').exec(location.search) || [null, ''])[1].replace(/\+/g, '%20')) || null;
            }

        };

        $(document).ready(Substitute.onReady);
    </script>

{% endblock %}

{% block title %}
    Vikar
{% endblock %}

{% block body %}
    <p></p>
    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <h1>Vikarer</h1>
        </div>
    </div>

    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <ul class="inline-list">
            {% include 'common/department_dropdown.html.twig' with {'pathForDepartment': 'substitute_show_by_department', 'departmentParameterName': 'department', 'currentDepartment': department} %}

            <li>
                <a class="button tiny" data-dropdown="semesterDropDown" aria-controls="semesterDropDown"
                   aria-expanded="false">{% if semester != NULL %}{{ semester }}{% else %}Semester{% endif %} <i
                            class="fa fa-caret-down"></i></a>
                <ul id="semesterDropDown" class="f-dropdown" data-dropdown-content tabindex="-1"
                    aria-hidden="true" aria-autoclose="false" tabindex="-1">

                    {% for s in semesters %}

                        <li><a href="{{ path(app.request.attributes.get('_route'),
                            app.request.attributes.get('_route_params')|merge(app.request.query.all)|merge({ 'semester': s.id })) }}">{{ s.name }}</a>
                        </li>

                    {% endfor %}
                </ul>
            </li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <hr>
            <table width="100%" id="substitute-table">
                <thead>

                <tr>
                    <th data-sort="string" class="clickable"> Fornavn</th>
                    <th data-sort="string" class="clickable"> Etternavn</th>
                    <th data-sort="int" class="clickable"> Tlf</th>
                    <th data-sort="string" class="clickable"> E-post</th>
                    <th data-sort="string" class="clickable"> Linje</th>

                    <th data-sort="int" class="clickable"> Ã…r</th>
                    <th><span data-sort="string" data-tooltip aria-haspopup="true" class="has-tip" title="Mandag"> M</span></th>
                    <th><span data-sort="string" data-tooltip aria-haspopup="true" class="has-tip" title="Tirsdag"> T</span></th>
                    <th><span data-sort="string" data-tooltip aria-haspopup="true" class="has-tip" title="Onsdag"> O</span></th>
                    <th><span data-sort="string" data-tooltip aria-haspopup="true" class="has-tip" title="Torsdag"> T</span></th>
                    <th><span data-sort="string" data-tooltip aria-haspopup="true" class="has-tip" title="Fredag"> F</span></th>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <th></th>
                    {% endif %}
                </tr>

                </thead>

                <tbody>
                    {% for sub in substitutes %}
                        <tr id="row{{ sub.id }}">
                            <td>{{ sub.application.user.firstName }}</td>

                            <td>{{ sub.application.user.lastName }}</td>

                            <td>{{ sub.application.user.phone }}</td>

                            <td>{{ sub.application.user.email }}</td>

                            <td>{{ sub.application.user.fieldOfStudy }}</td>

                            <td>{{ sub.application.yearOfStudy }}</td>

                            <td>{{ sub.application.monday }}</td>

                            <td>{{ sub.application.tuesday }}</td>

                            <td>{{ sub.application.wednesday }}</td>

                            <td>{{ sub.application.thursday }}</td>

                            <td>{{ sub.application.friday }}</td>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <td><a href="#" id="{{ sub.id }}" class="button tiny alert delete"><i
                                            class="fa fa-trash-o"></i> Slett</a></td>
                            {% endif %}
                        </tr>

                    {% endfor %}
                </tbody>
            </table>
            </hr>
        </div>
    </div>

    <div id="confirmModal" class="reveal-modal small" data-reveal aria-labelledby="confirmModalDelete"
         aria-hidden="true" role="dialog">
        <h2 id="modalMessage">Vil du virkelig slette elementet?</h2>
        <ul class="inline-list">
            <a id="modalAccept" href="#" class="button tiny alert">Slett</a>
            <a id="modalCancel" href="#" class="button tiny cancel">Avbryt</a>
        </ul>
    </div>
{% endblock %}
