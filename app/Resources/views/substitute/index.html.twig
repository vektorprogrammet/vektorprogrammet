{% extends 'adminBase.html.twig' %}

{% block title %}
    Vikar
{% endblock %}

{% block body %}
    <p></p>
    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <h1>Vikarer</h1>
        </div>
    </div>

    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <ul class="inline-list">
            {% include 'common/department_dropdown.html.twig' with {'pathForDepartment': 'substitute_show_by_department', 'departmentParameterName': 'department', 'currentDepartment': semester.department} %}

            <li>
                <a class="button tiny" data-dropdown="semesterDropDown" aria-controls="semesterDropDown"
                   aria-expanded="false">{% if semester != NULL %}{{ semester.name }}{% else %}Semester{% endif %} <i
                            class="fa fa-caret-down"></i></a>
                <ul id="semesterDropDown" class="f-dropdown" data-dropdown-content tabindex="-1"
                    aria-hidden="true" aria-autoclose="false" tabindex="-1">

                    {% for s in semesters %}

                        <li><a href="{{ path("substitute_show_by_semester", { semester: s.id }) }}"> {{ s.name }}</a>
                        </li>

                    {% endfor %}
                </ul>
            </li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <hr>
            <table width="100%" id="substitute-table">
                <thead>

                <tr>
                    <th data-sort="string" class="clickable"> Fornavn</th>
                    <th data-sort="string" class="clickable"> Etternavn</th>
                    <th data-sort="int" class="clickable"> Tlf</th>
                    <th data-sort="string" class="clickable"> E-post</th>
                    <th data-sort="string" class="clickable"> Linje</th>

                    <th data-sort="int" class="clickable"> Ã…r</th>
                    <th><span data-sort="string" data-tooltip aria-haspopup="true" class="has-tip" title="Mandag"> M</span></th>
                    <th><span data-sort="string" data-tooltip aria-haspopup="true" class="has-tip" title="Tirsdag"> T</span></th>
                    <th><span data-sort="string" data-tooltip aria-haspopup="true" class="has-tip" title="Onsdag"> O</span></th>
                    <th><span data-sort="string" data-tooltip aria-haspopup="true" class="has-tip" title="Torsdag"> T</span></th>
                    <th><span data-sort="string" data-tooltip aria-haspopup="true" class="has-tip" title="Fredag"> F</span></th>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <th></th>
                    {% endif %}
                </tr>

                </thead>

                <tbody>
                    {% for sub in substitutes %}
                        <tr>
                            <td>{{ sub.user.firstName }}</td>

                            <td>{{ sub.user.lastName }}</td>

                            <td>{{ sub.user.phone }}</td>

                            <td>{{ sub.user.email }}</td>

                            <td>{{ sub.user.fieldOfStudy }}</td>

                            <td>{{ sub.yearOfStudy }}</td>

                            <td>{{ sub.monday }}</td>

                            <td>{{ sub.tuesday }}</td>

                            <td>{{ sub.wednesday }}</td>

                            <td>{{ sub.thursday }}</td>

                            <td>{{ sub.friday }}</td>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <td>
                                    <form method="POST"
                                          onsubmit="return confirm('Vil du virkelig fjerne vikarstillingen til {{ sub.user.firstName }} {{ sub.user.lastName }}?')"
                                          action="{{ path('substitute_delete', { id: sub.id }) }}">
                                        <button type="submit"
                                                class="button tiny alert">
                                            <i class="fa fa-user-secret"></i>
                                                Slett
                                        </button>
                                    </form>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            </hr>
        </div>
    </div>
{% endblock %}
