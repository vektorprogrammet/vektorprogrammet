{% extends 'adminBase.html.twig' %}

{% block javascripts %}

    <script src="{{ asset_with_version('js/stupidtable.js') }}"></script>
    <script>
        var Substitute = {
            // The html table containing the substitute assistants
            subTable: $("#substitute-table"),

            onReady: function () {
                // Add sort functionality to the table containing the substitute assistants
                Substitute.subTable.stupidtable();

                // Add arrows after sorting the table
                Substitute.subTable.on("aftertablesort", Substitute.addSortArrows);
            },

            addSortArrows: function (event, data) {
                var th = $(this).find("th");
                th.find(".arrow").remove();
                var dir = $.fn.stupidtable.dir;

                var arrow = data.direction === dir.ASC ? "asc" : "desc";
                th.eq(data.column).append('<span class="arrow"> <i class="fa fa-sort-' + arrow + '"></i></span>');
            }
        };
        $(document).ready(Substitute.onReady);
    </script>

{% endblock %}

{% block title %}
    Vikar
{% endblock %}

{% block body %}
    <p></p>
    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <h1>Vikarerstillinger</h1>
            <p>Dette er en oversikt over alle vikarstillingene {{ semester }}</p>
        </div>
    </div>

    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            {# Semester dropdown #}
            {% include 'common/department_semester_dropdowns.html.twig' with {
            'path': 'substitute_show_by_semester',
            'parameterName': 'semester',
            'currentSemester': semester
            } %}
        </div>
    </div>

    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <hr>
            <table width="100%" id="substitute-table">
                <thead>

                <tr>
                    <th data-sort="string"> Fornavn</th>
                    <th data-sort="string"> Etternavn</th>
                    <th data-sort="int"> Tlf</th>
                    <th data-sort="string"> E-post</th>
                    <th data-sort="string"> Spr√•k</th>
                    <th><span data-sort="string" class="has-tip" title="Mandag">Man</span></th>
                    <th><span data-sort="string" class="has-tip" title="Tirsdag">Tir</span></th>
                    <th><span data-sort="string" class="has-tip" title="Onsdag">Ons</span></th>
                    <th><span data-sort="string" class="has-tip" title="Torsdag">Tor</span></th>
                    <th><span data-sort="string" class="has-tip" title="Fredag">Fre</span></th>
                    <th><span data-sort="string"> Bolk</span></th>
                    <th><span data-sort="int"> Poeng</span></th>
                    <th><span data-sort="string"> Passende</span></th>
                    {% if is_granted_team_leader() %}
                        <th colspan="2"></th>
                    {% endif %}
                </tr>
                </thead>

                <tbody>
                    {% for sub in substitutes %}
                        <tr>
                            <td>{{ sub.application.user.firstName }}</td>
                            <td>{{ sub.application.user.lastName }}</td>
                            <td>{{ sub.application.user.phone }}</td>
                            <td>{{ sub.application.user.email }}</td>

                            <td>{{ sub.application.language }}</td>
                            <td><i class="fa text-larger {{ sub.application.monday ? "fa-check-circle text-success" : "fa-times text-alert" }}"></i></td>
                            <td><i class="fa text-larger {{ sub.application.tuesday ? "fa-check-circle text-success" : "fa-times text-alert" }}"></i></td>
                            <td><i class="fa text-larger {{ sub.application.wednesday ? "fa-check-circle text-success" : "fa-times text-alert" }}"></i></td>
                            <td><i class="fa text-larger {{ sub.application.thursday ? "fa-check-circle text-success" : "fa-times text-alert" }}"></i></td>
                            <td><i class="fa text-larger {{ sub.application.friday ? "fa-check-circle text-success" : "fa-times text-alert" }}"></i></td>
                            <td>{{ sub.application.preferredGroup }}</td>
                            {% if sub.application.interview is not null and sub.application.user != app.user and (is_granted_team_leader() or sub.application.interview.interviewer == app.user) %}
                                <td>{{ sub.application.interview.interviewScore.getSum() }}</td>
                                <td>{{ sub.application.interview.interviewScore.suitableAssistant }}</td>
                                {% else %}
                                    <td colspan="2"></td>
                            {% endif %}

                            {% if is_granted_team_leader() %}
                                <td>
                                    <form method="POST"
                                          action="{{ path('substitute_modify', { id: sub.id }) }}">
                                        <button type="submit"
                                                class="button tiny">
                                            <i class="fa fa-pencil-square-o"></i>
                                            Rediger
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <form method="POST"
                                          onsubmit="return confirm('Vil du virkelig fjerne vikarstillingen til {{ sub.application.user.firstName }} {{ sub.application.user.lastName }}?')"
                                          action="{{ path('substitute_delete', { id: sub.id }) }}">
                                        <button type="submit"
                                                class="button tiny alert">
                                            <i class="fa fa-trash"></i>
                                            Slett
                                        </button>
                                    </form>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <hr>
        </div>
    </div>
{% endblock %}
