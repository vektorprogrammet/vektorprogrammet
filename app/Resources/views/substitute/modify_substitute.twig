{% extends 'adminBase.html.twig' %}

{% block title %}
    Endre vikar
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('substitute_show', {department: application.department.id, semester: application.semester.id}) }}">Vikarer</a>
    </li>
    <li class="breadcrumb-item active">{{ application.user }}</li>
{% endblock %}


{# Form themes user to modify the templates of the various form components #}
{% form_theme form 'form/interview_layout.html.twig' %}
{% form_theme form.days 'form/components/days_checkbox.html.twig' %}


{% block body %}
    <div class="card">
        <div class="card-header"><i class="fa fa-user-secret">

            </i> Rediger vikar - <a
                    href="{{ path('specific_profile', {'id': application.user.id}) }}">{{ application.user }}</a>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <label class="question-label">{{ form.days.vars.label }}</label>
            {{ form_widget(form.days) }}
            {{ form_errors(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
