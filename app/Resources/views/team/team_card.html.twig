<div class="card team-card mx-sm-4 my-sm-4 mx-0 my-2">
    <div class="card-block px-3 py-3">
        <h5 class="card-title mb-0 text-uppercase text-center"><a href="{{ path('team_page', {id: team.id}) }}">{{ team }}</a></h5>
    </div>
    <hr class="my-0">
    <div class="card-block px-3 py-3">
        <p class="card-text">{{ team.shortDescription }}</p>
    </div>
    <div class="card-block px-3 pb-2">
        <p class="team-email m-0 mb-1"><i class="big-icon m-0 mr-2 text-devil fa fa-envelope"></i><a href="mailto:{{ team.email}}">{{ team.email }}</a></p>
        <p class="m-0"><i class="big-icon m-0 mr-2 text-devil fa fa-users"></i><span>{{ team.activeWorkHistories | length }} medlemmer</span></p>
        <p class="text-right m-0 pt-1"><a class="p-2" href="{{ path('team_page', {id: team.id}) }}">Les mer <i class="fa fa-chevron-right"></i></a></p>
    </div>
    {% if team.acceptApplication %}
        <hr class="my-0">
        <div class="card-block px-2 py-2">
            <a href="{{ path('team_page', {id: team.id}) }}" class="m-0"><i class="text-success fa fa-star"></i> Har opptak!</a>
        </div>
    {% endif %}
</div>
