<div class="team-card">
    <div class="mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">
            <div class="team-card__header">
                <h2 class="mdl-card__title-text">{{ team }}</h2>

                <div class="profiles">
                    {% for wh in team.workHistories %}
                        <div class="img-wrapper">
                            <img class="profile-photo" src="{{ wh.user.picturePath }}" alt="{{ wh.user }}">
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="mdl-card__supporting-text">
            {{ team.shortDescription }}
        </div>
        <div class="team-card__actions mdl-card__actions mdl-card--border">
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('team_page', {id: team.id}) }}">
                Les mer
            </a>
            {% if team.acceptApplication %}
                <span class="application-chip mdl-chip mdl-chip--contact">
                    <span class="application-chip__symbol mdl-chip__contact mdl-color--teal-400 mdl-color-text--white">!</span>
                    <span class="application-chip__text mdl-chip__text">Har opptak</span>
                </span>
            {% endif %}
        </div>
    </div>
</div>
