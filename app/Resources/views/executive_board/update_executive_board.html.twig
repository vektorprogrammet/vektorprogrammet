{% extends 'adminBase.html.twig' %}

{% block title %}
    Oppdater Hovedstyret
{% endblock %}

{% block body %}
    <p></p>

    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <h1> Oppdater Hovedstyret </h1>

            <hr>

            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">

                    {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}

                    {{ form_row(form.shortDescription) }}

                    {{ form_row(form.description) }}
                    <br>
                    {{ form_widget(form.preview, {'attr': {'class': 'btn btn-secondary', 'formtarget': '_blank'}}) }}
                    <button class="btn btn-primary">Lagre</button>
                    <br><br>

                    {{ form_end(form) }}

                </div>
            </div>


        </div>
    </div>

{% endblock %}
