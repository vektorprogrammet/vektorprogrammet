{% extends 'adminBase.html.twig' %}

{% block body %}
    <div class="row">
        <div class="small-12 columns">
            <h1>{{ department.shortName }} sine nyhetsbrev</h1>
        </div>
    </div>
    <div class="row">
        <div class="small-12 columns">
            <a class="tiny button success" href="{{ path('newsletter_create') }}">Opprett nytt nyhetsbrev <i class="fa fa-plus"></i></a>
        </div>
        <br><br>
    </div>
    <div class="row">
        <div class="small-12 columns">
            <table>
                <tr>
                    <th>Navn</th>
                    <th>Abonnenter</th>
                    <th colspan="4"></th>
                    <th>Vis på påmeldingsside</th>
                </tr>
                {% for newsletter in newsletters %}
                    <tr>
                        <td><a href="{{ path('newsletter_show_subscribers', {id: newsletter.id}) }}">{{ newsletter.name }}</a></td>
                        <td><a href="{{ path('newsletter_show_subscribers', {id: newsletter.id}) }}">{{ newsletter.subscribers|length }}</a></td>
                        <td><a class="tiny button" href="{{ path('newsletter_show_subscribe', {id: newsletter.id}) }}">Påmedlingsskjema</a></td>
                        <td>
                            <a href="{{ path('newsletter_edit', { 'id': newsletter.id }) }}" class="button tiny">
                                <i class="fa fa-pencil-square-o"></i> Rediger
                            </a>
                        </td>

                        <td>
                            <form method="POST" action="{{ path('newsletter_delete', { 'id': newsletter.id }) }}" onsubmit="return confirm('Er du sikker?')">
                                <button type="submit" class="tiny button alert"><i class="fa fa-trash"></i> Slett</button>
                            </form>
                        </td>
                        <td><a class="tiny button" href="{{ path('newsletter_send_letter', {'id': newsletter.id}) }}">Lag e-post</a></td>
                        <td>
                            <form method="POST" action="{{ path('newsletter_toggle_visible', {'id' : newsletter.id}) }}">
                                <button type="submit"
                                        {% if newsletter.showOnAdmissionPage %}
                                            class="tiny button success"> Aktiv
                                         {% else %}
                                            class="tiny button"> Aktiver
                                        {% endif %}
                                    <i class="fa"></i> </button>
                            </form>
                        </td>

                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}