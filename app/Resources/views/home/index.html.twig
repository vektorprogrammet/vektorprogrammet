                </div>
            </div>
            <div class="row">
                <div class="small-12 medium-6 large-6 columns">
                    <div class="{{ element_editable() }}" id="infobox_one">
                            {{ get_content('infobox_one') | raw }}
                    </div>
                </div>
                <div class="small-12 medium-6 large-6 columns">
                    <div class="{{ element_editable() }}" id="infobox_two">
                        {{ get_content('infobox_two') | raw }}
                    </div>
                    <a href="{{ path('about') }} " class="vektor-button tiny">Les mer om vektorprogrammet</a>
                </div>
            </div>
			<br/>
			<br/>

            {% block sponsor_logos %}
                <div class="row">
                    {% include("sponsors/sponsors.html.twig") %}
                </div>
            {% endblock %}

		</div>
	</div>
{% endblock %}