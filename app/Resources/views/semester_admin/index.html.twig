{% extends 'adminBase.html.twig' %}

{% block title %}
    Opptaksperioder
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active">
        Opptaksperioder
    </li>
{% endblock %}

{% block breadcrumb_menu %}

    {% if is_granted_team_leader() %}
        <div class="btn-group">
            {% include 'common/department_dropdown.html.twig' with {
                'pathForDepartment': 'admission_period_admin_show_by_department',
                'departmentParameterName': 'id',
                'currentDepartment': department,
                'linkToSemester': false,
            } %}

            <a class="btn text-success btn-sm" href="{{ path('semester_create', { 'id': department.id }) }}">
                <i class="fa fa-plus"></i> Opptaksperiode
            </a>
        </div>
    {% endif %}
{% endblock %}



{% block body %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i> Opptaksperioder {{ department }}
                </div>
                <div class="card-body table-responsive">
                    <table class="table">

                        <thead>
                        <tr>
                            {% if is_granted_team_leader() %}
                                <th></th>
                            {% endif %}
                            <th> Navn</th>
                            <th> Opptak start</th>
                            <th> Opptak slutt</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for a in admissionPeriods %}
                            <tr class="text-nowrap">
                                {% if is_granted_team_leader() %}
                                    <td>
                                        <div class="dropdown">
                                            <div class="clickable" id="options-{{ a.id }}" data-toggle="dropdown"
                                                 aria-haspopup="true" aria-expanded="false">
                                                <i class="fa fa-ellipsis-v text-secondary"></i>
                                            </div>
                                            <div class="dropdown-menu pt-0" aria-labelledby="options-{{ a.id }}">
                                                <div class="dropdown-header mb-2"><strong>{{ a.name }}</strong></div>
                                                <a class="dropdown-item"
                                                   href="{{ path('semester_update', {'id': a.id}) }}"><i
                                                            class="fa fa-pencil text-primary"></i> Rediger</a>
                                                {% if is_granted_admin() %}
                                                    <form method="POST"
                                                          action="{{ path('semester_delete', {'id': a.id}) }}"
                                                          onsubmit="return confirm('Er du sikker pÃ¥ at du vil slette {{ a.name }}?')">
                                                        <button class="dropdown-item">
                                                            <i class="fa fa-trash text-danger"></i> Slett
                                                        </button>
                                                    </form>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                {% endif %}
                                <td>{{ a.name }}</td>
                                <td> {{ a.admissionStartDate|date('d. M Y') }}
                                    kl. {{ a.admissionStartDate|date('H:i:s') }}</td>
                                <td> {{ a.admissionEndDate|date('d. M Y') }}
                                    kl. {{ a.admissionEndDate|date('H:i:s') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
