{% extends 'adminBase.html.twig' %}

{% block title %}
    Ny Changelog
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active">Changelog-objekter</li>
    <li class="breadcrumb-item active">Changelog-objekt</li>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.16/jquery.datetimepicker.min.css">
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-12 col-xl-10 col-xxl-8 col-xxxl-6">
            <div class="card">
                <div class="card-header"><i class="fa fa-comment-o"></i> Changelog</div>
                <div class="card-body">
                    {{ form_row(form.title) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.gitHubLink) }}
                    {{ form_row(form.date) }}

                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>
            <div class="hide">
                {{ form_rest(form) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset_with_version('js/question_repeater.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', QuestionManager.onReady);
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.16/jquery.datetimepicker.full.min.js"></script>
    <script>
        const options = {
            format: 'd.m.Y H:i',
            lang: 'no',
            step: 5,
        };

        jQuery('#{{ form.date.vars.id }}').datetimepicker(options);
        console.log("{{ form.date.vars.id }}")
    </script>
    <script>
        var btn = document.getElementById("change_log_save");
        var sending = document.getElementById("sending");
        btn.addEventListener("click", function (e) {
            if (form.checkValidity()) {
                btn.style.display = "none";
                sending.style.display = "block";
            } else {
                e.preventDefault();
                $('#error').show();
                setTimeout(function () {
                    $('#error').fadeOut(300);
                }, 3000)
            }
        })
    </script>
{% endblock %}
